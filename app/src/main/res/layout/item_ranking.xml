<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iviUser"
        android:layout_width="82dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tviRKUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="Username"
        app:layout_constraintStart_toEndOf="@+id/iviUser"
        app:layout_constraintTop_toTopOf="@+id/iviUser" />

    <TextView
        android:id="@+id/tviRKName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/iviUser"
        app:layout_constraintStart_toStartOf="@+id/tviRKUsername"
        app:layout_constraintTop_toBottomOf="@+id/tviRKUsername" />

    <TextView
        android:id="@+id/tviPuntajeRK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="[Puntaje]"
        app:layout_constraintBottom_toBottomOf="@+id/iviUser"
        app:layout_constraintStart_toEndOf="@+id/tviRKName" />
</androidx.constraintlayout.widget.ConstraintLayout>